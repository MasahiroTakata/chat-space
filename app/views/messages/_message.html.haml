  .mainChat__content__messageBox
    .mainChat__content__messageBox__mAndT
      .mainChat__content__messageBox__mAndT__member
       = message.user.name
      .mainChat__content__messageBox__mAndT__time
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
      .mainChat__content__messageBox__message
      - if message.content.present?
        %p.mainChat__content__messageBox__message__content
          = message.content
      = image_tag message.image.url, class: 'mainChat__content__messageBox__message__image' if message.image.present?