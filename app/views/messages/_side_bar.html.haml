.sideBar
  .sideBar__header
    .sideBar__header__accountSpace
      .sideBar__header__accountSpace__loginname
        = current_user.name
      .sideBar__header__accountSpace__iconbox
        = link_to new_group_path() do
          = fa_icon "edit"
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog'

  .sideBar__content
    .sideBar__content__groupbox
      - current_user.groups.each do |group|
        = link_to group_messages_path(group), class: 'sideBar__content__groupbox__groupName' do
          .group__name
            = group.name
        %p{class: 'sideBar__content__groupbox__newMessage'}
          = group.show_last_message