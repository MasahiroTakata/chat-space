.mainChat
  .mainChat__header
    .mainChat__header__groupname
      %p{class: 'mainChat__header__groupname__name'}
        グループ名
      %p{class: 'mainChat__header__groupname__member'}
        Member: masa
    = link_to'#' do
      Edit

.messages
  = render @messages

  .mainChat__footer
    .mainChat__footer__inputspace
      %input.mainChat__footer__inputspace__text{name: "message", placeholder: "type a message", type: "text", value: ""}

      %label{class: "mainChat__footer__inputspace__imageBtn", for: "fileBtn"}
        = fa_icon "image"
        %input{type: "file", class: "mainChat__footer__inputspace__imageBtn__inputfile", id: "fileBtn"}

    %input{type: "submit", class: "mainChat__footer__send", id: "sendBtn", value: "Send"}